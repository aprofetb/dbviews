<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
  <persistence-unit name="Model">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/dbviewsDS</jta-data-source>
    <class>org.dbviews.model.DbvConnection</class>
    <class>org.dbviews.model.DbvGraph</class>
    <class>org.dbviews.model.DbvTable</class>
    <class>org.dbviews.model.DbvView</class>
    <class>org.dbviews.model.DbvTableField</class>
    <properties>
      <property name="eclipselink.target-server" value="WebLogic_10"/>
      <property name="javax.persistence.jtaDataSource"
                value="jdbc/dbviewsDS"/>
    </properties>
  </persistence-unit>
</persistence>
